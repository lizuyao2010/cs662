<?xml version="1.0" encoding="UTF-8"?>

<!--
	Ant build file for SentSimp v0.1.  
 -->
 
<project name="SentSimp" default="dist" basedir="." >

	<description>
		SentSimp is a sentencen simplifier
	</description>

	<property name="src" location="src"/>
	<property name="build" location="build"/> 
	<property name="dist" location="."/>
	<property name="hist" location="hist"/>
	<property name="version.num" value="0.1"/>
	<property name="project.name" value="sentsimp"/>
	<buildnumber file="build.num"/>
	 
	
	<path id="classpath">
		<pathelement location="lib/stanford-parser.jar"/>
	</path>
	
	
	<!-- Initialize the build and create the directory -->
	<target name="init">
		<!-- Create the time stamp -->
		<tstamp>
			<format property="TODAY" pattern="yyyy-MM-dd HH:mm:ss" />
		</tstamp>
		<!-- Make the directory -->
		<mkdir dir="${build}"/>
	</target>
	
	<target name="compile" depends="init" 
		description="compile the source code">
		<!-- Compile the java code from ${src} into ${build} -->
		<javac srcdir="${src}" destdir="${build}" debug="true" debuglevel="lines,vars,source">
			<classpath refid="classpath"/>
		</javac>
	</target>
	
	<target name="dist" depends="compile"
	    description="generate the distribution" >
	    <!-- Create the distribution directory -->
	    <mkdir dir="${dist}/lib"/>
	    <mkdir dir="${hist}/lib"/>
	    <!-- Put everything in ${build} into the MyProject-${DSTAMP}.jar file -->
	    <buildnumber file="build.num"/>
	    <manifest file="MANIFEST.MF">
	            <attribute name="Built-By" value="${user.name}"/>
	            <attribute name="Main-Class" value="edu.cmu.cs.lti.relationFilter.Filter"/>
        		<attribute name="Implementation-Version" 
                     value="${version.num}-b${build.number}"/> 
                <attribute name="Built-Date" value="${TODAY}"/>       
    	</manifest>
		<property name="build.jar" location="${hist}/lib/${project.name}-${version.num}-build${build.number}.jar"/>
    	<property name="build.latest.indicator" location="${hist}/lib/LATEST_IS_${version.num}-build${build.number}"/>
    	<property name="build.latestjar" location="${dist}/${project.name}-${version.num}-latest.jar"/>
<!--		<unjar src="lib/commons-configuration-1.6.jar" dest="${build}"/>
		<unjar src="lib/commons-collections-3.2.1.jar" dest="${build}"/>
		<unjar src="lib/trove-2.1.0a2.jar" dest="${build}"/>
		<unjar src="lib/jpfm-0.1-latest.jar" dest="${build}"/>
		<unjar src="lib/commons-lang-2.4.jar" dest="${build}"/>
		<unjar src="lib/commons-logging-1.0.4.jar" dest="${build}"/>-->
    	<jar jarfile="${build.jar}" basedir="${build}" manifest="MANIFEST.MF"/> 
    	<copy file="${build.jar}" tofile="${build.latestjar}"/>
    	<touch file="${build.latest.indicator}"/>
  	</target>
	

  	<target name="clean"
        description="clean up" >
    	<!-- Delete the ${build} and ${dist} directory trees -->
    	<delete dir="${build}"/>
    	<delete dir="${dist}"/>
    	<delete file="MANIFEST.MF"/>
  	</target>
	

</project>
